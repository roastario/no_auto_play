{
  "manifest_version": 2,
  "name": "Settings Purger",
  "description": "This extension allows you to purge your settings on the various byhiras environments",
  "version": "0.1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "https://*.byhiras.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.byhiras.com/*"
      ],
      "js": [
        "purger.js"
      ]
    }
  ]
}
